rules_version = '2'

service cloud.firestore {
	match /databases/{database}/documents {
		match /users/{uid} {
			allow read: if isSignedInWith(uid)
		}

		function isSignedIn() {
			return request.auth != null
		}

		function isSignedInWith(uid) {
			return isSignedIn() && request.auth.uid == uid
		}
	}
}
